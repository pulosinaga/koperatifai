
# KoperatifAI - Hostinger Stability Protocol
<IfModule mod_rewrite.c>
  Options -MultiViews
  RewriteEngine On
  RewriteBase /

  # Jika file fisik ada, langsung layani
  RewriteCond %{REQUEST_FILENAME} -f [OR]
  RewriteCond %{REQUEST_FILENAME} -d
  RewriteRule ^ - [L]

  # Pastikan file program tidak pernah diarahkan ke index.html
  RewriteCond %{REQUEST_URI} \.(js|tsx|ts|jsx|css|json|png|jpg|jpeg|gif|svg|ico)$ [NC]
  RewriteRule ^ - [L]

  # Fallback rute navigasi ke index.html
  RewriteRule ^ index.html [L]
</IfModule>

<IfModule mod_mime.c>
  # Tambahkan tipe MIME agar server tidak bingung dengan file TypeScript
  AddType application/javascript .js .jsx .ts .tsx
</IfModule>

<IfModule mod_headers.c>
  # Nonaktifkan cache selama masa perbaikan agar perubahan langsung terlihat
  <FilesMatch "\.(js|tsx|ts|css|html)$">
    Header set Cache-Control "max-age=0, no-cache, no-store, must-revalidate"
    Header set Pragma "no-cache"
    Header set Expires 0
  </FilesMatch>
</IfModule>
