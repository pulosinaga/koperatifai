
# KoperatifAI - Hostinger Ultimate Stability Fix
<IfModule mod_rewrite.c>
  RewriteEngine On
  RewriteBase /

  # Jika file fisik ada, jangan lakukan apa-apa
  RewriteCond %{REQUEST_FILENAME} -f [OR]
  RewriteCond %{REQUEST_FILENAME} -d
  RewriteRule ^ - [L]

  # Aturan khusus: JANGAN PERNAH redirect file statis ke index.html
  # Ini mencegah error "Unexpected token '<'"
  RewriteCond %{REQUEST_URI} \.(js|css|json|png|jpg|jpeg|gif|svg|ico|webmanifest)$ [NC]
  RewriteRule ^ - [L]

  # Arahkan sisanya ke index.html (Navigasi Frontend)
  RewriteRule ^ index.html [L]
</IfModule>

<IfModule mod_headers.c>
  # Pastikan browser tidak menyimpan cache file JS yang rusak
  <FilesMatch "\.(js|css|html)$">
    Header set Cache-Control "max-age=0, no-cache, no-store, must-revalidate"
  </FilesMatch>
  # Tambahkan MIME Type yang benar
  AddType application/javascript .js
</IfModule>
