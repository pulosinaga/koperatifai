
# KoperatifAI - Hostinger Stability Fix
<IfModule mod_rewrite.c>
  RewriteEngine On
  RewriteBase /

  # 1. Jangan redirect jika file atau direktori fisik ada
  RewriteCond %{REQUEST_FILENAME} -f [OR]
  RewriteCond %{REQUEST_FILENAME} -d
  RewriteRule ^ - [L]

  # 2. Safety net untuk file statis agar tidak pernah di-redirect ke index.html
  # Ini adalah solusi untuk error "Unexpected token '<'"
  RewriteCond %{REQUEST_URI} \.(js|tsx|ts|jsx|css|json|png|jpg|jpeg|gif|svg|ico|webmanifest)$ [NC]
  RewriteRule ^ - [L]

  # 3. Arahkan sisa request ke index.html untuk penanganan SPA
  RewriteRule ^ index.html [L]
</IfModule>

<IfModule mod_headers.c>
  # Tambahkan MIME Type agar browser mengenali file .tsx sebagai script
  AddType application/javascript .js .tsx .ts .jsx
  
  # Pastikan file JS tidak di-cache secara agresif selama pengembangan
  <FilesMatch "\.(js|tsx|ts|css|html)$">
    Header set Cache-Control "max-age=0, no-cache, no-store, must-revalidate"
    Header set Pragma "no-cache"
    Header set Expires 0
  </FilesMatch>
</IfModule>
