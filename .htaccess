
# KoperatifAI - Kernel Stability Protocol
<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteBase /

    # Jangan alihkan jika file atau direktori benar-benar ada
    RewriteCond %{REQUEST_FILENAME} -f [OR]
    RewriteCond %{REQUEST_FILENAME} -d
    RewriteRule ^ - [L]

    # Pastikan file kode tidak di-rewrite ke index.html
    RewriteCond %{REQUEST_URI} \.(tsx|ts|js|jsx|css|json|png|jpg|svg)$ [NC]
    RewriteRule ^ - [L]

    # Alihkan rute virtual lainnya ke index.html (SPA support)
    RewriteRule ^ index.html [L]
</IfModule>

# Paksa server menganggap .tsx dan .ts sebagai file JavaScript yang bisa dieksekusi browser/Babel
<IfModule mod_mime.c>
    AddType application/javascript .ts
    AddType application/javascript .tsx
    AddType application/javascript .js
</IfModule>

# Cegah caching selama tahap perbaikan agar perubahan terlihat instan
<IfModule mod_headers.c>
    Header set Cache-Control "max-age=0, no-cache, no-store, must-revalidate"
    Header set Pragma "no-cache"
    Header set Expires 0
</IfModule>
